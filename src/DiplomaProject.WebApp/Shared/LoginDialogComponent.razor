@inherits LayoutComponentBase

<MatDialog @bind-IsOpen="@IsOpen">
    <MatDialogTitle>Пожалуйста, авторизуйтесь</MatDialogTitle>
    <MatDialogContent>
        <form method="post" action="/api/Security/Login">
            <p>
                <MatStringField Required name="userName" TValue="string" Label="Электронная почта" Icon="mail_outline"/>
            </p>
            <p>
                <MatStringField Required name="password" Type="password" TValue="string" Label="Пароль" Icon="lock_outline"/>
            </p>
            <MatButton type="submit">Войти</MatButton>
        </form>
    </MatDialogContent>
</MatDialog>

@code {

    [Parameter]
    public bool IsOpen { get; set; }

}