@inherits LayoutComponentBase

<MatDrawerContainer>
    <MatDrawer @bind-Opened="@_opened" Mode="@MatDrawerMode.Modal">
        <NavMenu/>
    </MatDrawer>
    <MatDrawerContent>
        <MatAppBarContainer>
            <MatAppBar Fixed="true">
                <MatAppBarRow>
                    <MatAppBarSection>
                        <MatIconButton Icon="menu" OnClick="ButtonClicked"></MatIconButton>
                        <MatAppBarTitle>Project</MatAppBarTitle>
                    </MatAppBarSection>
                    <MatAppBarSection Align="@MatAppBarSectionAlign.End">
                        <LoginDisplay/>
                    </MatAppBarSection>
                </MatAppBarRow>
            </MatAppBar>

            <MatAppBarContent>
                @Body
            </MatAppBarContent>
        </MatAppBarContainer>
    </MatDrawerContent>
</MatDrawerContainer>


@code
{
    bool _opened;

    void ButtonClicked()
    {
        _opened = !_opened;
    }
}