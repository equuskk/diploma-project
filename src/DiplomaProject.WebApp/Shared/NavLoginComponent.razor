@* @inject NavigationManager navigationManager *@

<AuthorizeView>
    <Authorized>
        <MatButton Unelevated Icon="@MatIconNames.Settings">Настройки</MatButton>
        <form method="post" action="api/Security/Logout">
            <MatButton Unelevated type="submit">Выйти</MatButton>
        </form>
    </Authorized>
    <NotAuthorized>
        <MatButton Unelevated Icon="@MatIconNames.Account_circle" OnClick="OnClick">Вход</MatButton>
    </NotAuthorized>
</AuthorizeView>

<LoginDialogComponent IsOpen="@IsLoginDialogOpened"/>

@code {
    public bool IsLoginDialogOpened { get; set; }

    public void OnClick()
    {
    // navigationManager.NavigateTo("Identity/Account/Login", true);
        IsLoginDialogOpened = !IsLoginDialogOpened;
    }

}