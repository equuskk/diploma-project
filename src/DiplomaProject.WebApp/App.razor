<CascadingAuthenticationState>
    <MatThemeProvider Theme="@theme">
        <MatToastContainer/>
        <Router AppAssembly="@typeof(Program).Assembly">
            <Found Context="routeData">
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                    <NotAuthorized>
                        <MatH3>Пожалуйста, авторизуйтесь. Иначе у вас не будет доступа к содержимому</MatH3>
                    </NotAuthorized>
                </AuthorizeRouteView>
            </Found>
            <NotFound>
                <LayoutView Layout="@typeof(MainLayout)">
                    <p>Страница по этому адресу не найдена.</p>
                </LayoutView>
            </NotFound>
        </Router>
    </MatThemeProvider>
</CascadingAuthenticationState>

@code
{
    readonly MatTheme theme = new MatTheme
    {
        Primary = MatThemeColors.Green._800.Value,
        Secondary = MatThemeColors.Cyan._300.Value
    };
}